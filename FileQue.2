// Make a program to input student information from a user & enter it to a file.

#include <stdio.h>

int main(void) {
 FILE*fptr;
  fptr = fopen("student.txt","w");

  char name[100];
  int age;
  float cgpa;

  printf("Student Name :");
  scanf("%s",name);
  printf("Student age :");
  scanf("%d",&age);
  printf("Student cgpa :");
  scanf("%f",&cgpa);


  fprintf(fptr,"Student name = %s\n",name);
  fprintf(fptr,"Student age = %d\n",age);
  fprintf(fptr,"Student cgpa = %f\n",cgpa);

  fclose(fptr);
  return 0;
}
